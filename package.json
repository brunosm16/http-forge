{
  "name": "http-forge",
  "author": "Bruno Moraes <brunoskr23@gmail.com>",
  "license": "MIT",
  "description": "Intuitive HTTP Client for Node.js",
  "version": "0.0.5",
  "main": "./dist/main.js",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "keywords": [
    "http client",
    "http",
    "http request",
    "reusable library"
  ],
  "scripts": {
    "build": "tsup",
    "export-vars": "export $(grep -v '^#' .env | xargs -0) && echo 'Environment variables are set'",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "npm run test -- --watch",
    "test:watch:verbose": "npm run test:watch -- --verbose",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@jest/types": "^29.6.3",
    "@types/create-test-server": "^3.0.5",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitizen": "^4.3.0",
    "coveralls": "^3.1.1",
    "create-test-server": "^3.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsonc": "^2.11.2",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-plugin-yml": "^1.11.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  }
}
